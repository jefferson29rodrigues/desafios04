{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers">
    <section class="avatar" style=" background: url(https://source.unsplash.com/collection/3203326/500x500) no-repeat center center / cover " ></section>
    <section>
        <h3>New Teacher</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input
                    type="url"
                    name="avatar_url"
                    placeholder="http://"
                >
            </div>
        </div>

        <div class="item">
            <div>Nome do professor</div>
            <div>
                <input
                    type="text"
                    name="name"
                    placeholder="Nome do professor"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>


{% endblock content %}