{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - Jefferson Rodrigues</title>    
{% endblock %}

{% block content %}

<div class="card table-container">
    <table width="100%">
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td>{{teacher.areaAtuacao}}</td>
                <td><a href="/teachers/{{teacher.id}}">ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}