<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Teacher</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Name of the Teacher"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth date</div>
    <div>
        <input 
            type="text"
            name="birth"
            value="teacher.birth"
        >
    </div>
</div>