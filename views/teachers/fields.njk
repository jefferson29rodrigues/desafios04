<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Teacher</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Name of the Teacher"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth date</div>
    <div>
        <input 
            type="date"
            name="birth"
            value="{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Graduação</div>    
    <div>
        <select name="escolaridade" id="selecao">
            <option value="medio">Ensino Médio Completo</option>
            <option value="superior" selected >Ensino Superior Completo</option>
            <option value="mestrado">Mestrado </option>
            <option value="doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Modalidade de Ensino</div>
    <div>
        <span>
            <input 
                type="radio"
                name="tipoEnsino"
                value="presencial"
                {% if teacher.tipoEnsino == 'Presencial' %}
                    checked
                {% endif %}
            > Presencial
        </span>
        <span>
            <input 
                type="radio"
                name="tipoEnsino"
                value="ead"
                {% if teacher.tipoEnsino == 'Ead' %}
                    checked
                {% endif %}
            > Ead
        </span>
    </div>
</div>



<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input 
            type="text"
            name="areaAtuacao"
            placeholder="Separe as áreas de atuação por vírgula"
            value="{{ teacher.areaAtuacao }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>